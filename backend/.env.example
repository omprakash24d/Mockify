# Environment Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/mockify_neet
MONGODB_TEST_URI=mongodb://localhost:27017/mockify_neet_test

# Security
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRE=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=300
ENABLE_CACHE=true

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Firebase Configuration
FIREBASE_PROJECT_ID=mockifyneet
FIREBASE_ADMIN_SERVICE_ACCOUNT_PATH=/path/to/your/firebase-service-account.json

# Security Note:
# 1. Copy this file to .env and fill in your actual values
# 2. Never commit the .env file or service account JSON files
# 3. Store the Firebase service account key in a secure location outside the repository
# 4. Consider using environment variables or secure secret management in production